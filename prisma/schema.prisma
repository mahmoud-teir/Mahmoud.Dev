generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============ AUTH MODELS (Better Auth) ============

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions      Session[]
  accounts      Account[]
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  token        String   @unique
  expiresAt    DateTime
  ipAddress    String?
  userAgent    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
}

// ============ PORTFOLIO MODELS ============

model Project {
  id            String   @id @default(cuid())
  slug          String   @unique
  title         String
  titleAr       String?
  description   String
  descriptionAr String?
  content       String?  @db.Text
  contentAr     String?  @db.Text
  image         String?
  images        String[]
  technologies  String[]
  liveUrl       String?
  githubUrl     String?
  featured      Boolean  @default(false)
  status        Status   @default(DRAFT)
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model BlogPost {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String
  titleAr     String?
  excerpt     String?
  excerptAr   String?
  content     String    @db.Text
  contentAr   String?   @db.Text
  image       String?
  tags        String[]
  readTime    Int?
  status      Status    @default(DRAFT)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Experience {
  id            String    @id @default(cuid())
  company       String
  companyAr     String?
  role          String
  roleAr        String?
  description   String?
  descriptionAr String?
  logo          String?
  startDate     DateTime
  endDate       DateTime?
  current       Boolean   @default(false)
  order         Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  role      String
  roleAr    String?
  company   String?
  companyAr String?
  quote     String
  quoteAr   String?
  image     String?
  featured  Boolean  @default(false)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String   @db.Text
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model SiteSettings {
  id        String   @id @default("settings")
  bio       String?  @db.Text
  bioAr     String?  @db.Text
  cvUrl     String?
  email     String?
  github    String?
  linkedin  String?
  twitter   String?
  updatedAt DateTime @updatedAt
}

// ============ ENHANCED ABOUT PAGE MODELS ============

model Skill {
  id          String   @id @default(cuid())
  name        String
  nameAr      String?
  category    String   // Frontend, Backend, Database, Tools, etc.
  proficiency Int      @default(80) // 0-100 percentage
  icon        String?  // Optional icon name or URL
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Certification {
  id          String    @id @default(cuid())
  name        String
  nameAr      String?
  issuer      String    // e.g., "Google", "AWS", "Coursera"
  issuerAr    String?
  image       String?   // Certificate image or issuer logo
  url         String?   // Link to verify/view certificate
  issueDate   DateTime
  expiryDate  DateTime?
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum Status {
  DRAFT
  PUBLISHED
}
